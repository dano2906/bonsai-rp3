            </div>
        </nav>
        <div class="flex items-center justify-center gap-x-3">
            <button class="h-10 text-sm font-semibold uppercase transition-colors bg-white border rounded w-28 border-green text-green font-proxima-nova-semibold hover:bg-green/90 hover:text-white">Log in</button>
            <button class="h-10 text-sm font-semibold text-white uppercase transition-colors rounded w-28 bg-green/90 font-proxima-nova-semibold hover:bg-green">Start free</button>
        </div>
    </div>
</header>

<script>
    let menus = document.querySelectorAll(".menu");
    menus.forEach((menu)=>{
        menu?.addEventListener("mouseenter",()=>{
            let child = menu.querySelector("div");
            child?.classList.remove("invisible");
        })
        menu?.addEventListener("mouseleave",()=>{
            let child = menu.querySelector("div");
            child?.classList.add("invisible");
        })
    })
</script>