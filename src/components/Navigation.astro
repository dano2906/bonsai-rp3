---
import TemplateMenuList from "./TemplateMenuList.astro";
---

<header class="bg-white w-full h-auto fixed">
    <div class="max-w-6xl mx-auto px-6 py-5 flex items-center justify-between">
        <a href="">
            <img src="/images/bonsai_logo.svg" alt="Bonsai icon" width="156" height="156">
        </a>
        <nav class="flex flex-1 items-center justify-center gap-x-10">
            <div class="menu flex items-center justify-center gap-x-2 cursor-pointer relative">
