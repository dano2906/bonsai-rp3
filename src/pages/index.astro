---
import Slider from '@components/Slider.astro';
import Layout from '../layouts/Layout.astro';
import Navigation from '@components/Navigation.astro';
import Pricing from '@components/Pricing.astro';
import CustomizeWorkflow from '@components/CustomizeWorkflow.astro';
import Promo from '@components/Promo.astro';
import QA from '@components/QA.astro';
---

<Layout>
	<div class="w-screen h-auto">
        <Navigation />
        <main class="w-full h-auto pt-48 pb-24 mx-auto">
            <div class="flex items-center justify-center w-full h-auto gap-x-14">
                <h1 class="text-5xl font-normal text-left text-gray font-amergo-bt">Plans & Pricing</h1>
                <Slider /> 
            </div>
            <Pricing />
        </main>
        <CustomizeWorkflow />
        <Promo />
        <QA />
    </div>
</Layout>
